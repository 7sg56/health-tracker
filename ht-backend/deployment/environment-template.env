# Health Tracker Backend - Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Production database URL
# Format: jdbc:mysql://hostname:port/database_name
DB_URL=jdbc:mysql://localhost:3306/health_tracker_prod

# Database credentials
DB_USERNAME=healthtracker_user
DB_PASSWORD=your_secure_password_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Domain for session cookies (your application domain)
COOKIE_DOMAIN=yourdomain.com

# SSL Configuration
SSL_ENABLED=true
SSL_KEYSTORE=/path/to/your/keystore.p12
SSL_KEYSTORE_PASSWORD=your_keystore_password
SSL_KEYSTORE_TYPE=PKCS12

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Path for application log files
LOG_FILE_PATH=/var/log/healthtracker/application.log

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Port for management/actuator endpoints (separate from main application port)
MANAGEMENT_PORT=8081

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Spring profile (should be 'prod' for production)
SPRING_PROFILES_ACTIVE=prod

# Server port (default is 8080)
SERVER_PORT=8080

# =============================================================================
# OPTIONAL ADVANCED CONFIGURATION
# =============================================================================

# JVM Memory Settings (uncomment and adjust as needed)
# JAVA_OPTS=-Xms512m -Xmx2g -XX:+UseG1GC -XX:MaxGCPauseMillis=200

# Additional database connection pool settings (if needed)
# DB_POOL_MAX_SIZE=20
# DB_POOL_MIN_IDLE=10

# CORS settings for production (if needed for specific frontend domains)
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# DEVELOPMENT/STAGING OVERRIDES
# =============================================================================
# Uncomment these for development or staging environments

# For development environment:
# SPRING_PROFILES_ACTIVE=dev
# SSL_ENABLED=false
# COOKIE_DOMAIN=localhost
# DB_URL=jdbc:mysql://localhost:3306/health_tracker_dev

# For staging environment:
# SPRING_PROFILES_ACTIVE=staging
# COOKIE_DOMAIN=staging.yourdomain.com
# DB_URL=jdbc:mysql://staging-db:3306/health_tracker_staging